<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <style>
        .footer {
            position: fixed;
            left: 0;
            bottom: 0;
            width: 100%;
            margin: 0;
        }
    </style>
</head>
<body style="background-image: url('/Content/images/background.jpg'); background-repeat: no-repeat; background-size: cover;">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                @Html.ActionLink("Home", "Home_Page", "Home", new { area = "" }, new { @class = "navbar-brand" })
                <div class="navbar-brand">|</div>
                @Html.ActionLink("Semester 5 Information", "Semester5_Page", "Semester", new { area = "" }, new { @class = "navbar-brand" })
                <div class="navbar-brand">|</div>
                @Html.ActionLink("Testimonials", "Testimonials_Page", "Testimonial", new { area = "" }, new { @class = "navbar-brand" })
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()

    </div>
    <div class="navbar navbar-inverse footer">
        <div class="container">
            <div class="navbar-header">
                <div class="navbar-brand">Made by Dylan Pita, for use by Dylan Pita. </div>
            </div>
        </div>
    </div>

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>